#!/bin/sh

PREREQ=""
prereqs()
{
   echo "$PREREQ"
}

case $1 in
prereqs)
   prereqs
   exit 0
   ;;
esac

# Begin real processing below this line

. /usr/share/initramfs-tools/hook-functions
. /etc/default/bsrt

echo -n "Parsing configuration... "

snapshot_dir=$(awk '$1 == "snapshot_root" { print $2 }' /etc/rsnapshot.conf)
root_dev=$(awk '$0 !~ /^ *#/ && $2 == "/" { print $1 }' /etc/fstab)
backup_dev=${BACKUPDEV:-$root_dev}

cat > ${DESTDIR}/etc/default/bsrt << EOF
ROOTDEV=${root_dev}
BACKUPDEV=${backup_dev}
SNAPSHOTDIR=${snapshot_dir}
EOF

echo "done!"
